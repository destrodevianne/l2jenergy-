{
	# =====================================================================
	# Nevit System Settings
	# =====================================================================
	# Global setting for Nevit bonus system
    # Set here points amount player must gather in order to get bonus effect
    # Default: 7200
    "NevitBonusMaxPoints" : "7200",

    # Set here max nevit bonus time that player will get (in seconds)
    # Default: 14400
    "NevitBonusMaxTime" : "14400",

    # Set here refresh cycle in seconds
    # Default: 30
    "NevitBonusRefreshRate" : "30",

    # Set here the points amount to add on each refresh cycle
    # Default: 72
    "NevitBonusRefreshPoints" : "72",

    # When nevit points reach max effect will be applied
    # set here that effect time
    # Default: 180
    "NevitBonusEffectTime" : "180",

    # Enable this if you want nevit bonus points continue gauge when player hunt mobs
    # Default: false
    "NevitBonusExtraPoints" : "false",

    # Enable tihs if you want nevit bonus points increase even if 4 hours didnt pass
    # ps. NevitBonusExtraPoints must be true
    # Default: false
    "NevitBonusExtraPointsAllTime" : "false"
}